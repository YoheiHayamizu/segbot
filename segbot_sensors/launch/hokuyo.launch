<launch>

  <arg name="tf_prefix" default="" /> <!-- because hokuyo_node currently does not resolve tf prefixes -->
  <arg name="name" default="laser" />

  <!-- Remember to construct the tf tree to $(arg name)_link -->

  <!-- construct the link from the base of the hokuyo to the laser -->
  <node name="$(arg name)_hokuyo_link_broadcaster" pkg="tf" type="static_transform_publisher"
    args="0 0 0.058 0 0 0 $(arg tf_prefix)/$(arg name)_link $(arg tf_prefix)/$(arg name)_laser_link 100" />

  <!-- run the hokuyo driver with the laser link as the frame id -->
  <node name="$(arg name)_hokuyo" pkg="hokuyo_node" type="hokuyo_node">
    <param name="frame_id" value="$(arg tf_prefix)/$(arg name)_laser_link" />
  </node>
  
</launch>
