<?xml version="1.0"?>

<robot
  xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
  xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
  xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface">

  <macro name="segbot_wheel" params="suffix parent *origin">
    <joint name="${parent}_${suffix}_wheel_joint" type="continuous">
      <insert_block name="origin" />
      <axis xyz="0 1 0" />
      <anchor xyz="0 0 0" />
      <limit effort="100" velocity="100" />
      <joint_properties damping="0.0" friction="0.0" />
      <parent link="${parent}" />
      <child link="${parent}_${suffix}_wheel_link" />
    </joint>

    <link name="${parent}_${suffix}_wheel_link">
      <inertial>
        <mass value="5" />
        <origin xyz=" 0 0 0 " />
        <inertia  ixx="0.076" ixy="0.0" ixz="0.0"
          iyy="0.144" iyz="0.0"
          izz="0.076" />
      </inertial>

      <visual>
        <segbot_wheel_visual suffix="${suffix}" />
      </visual>

      <collision>
        <segbot_wheel_collision suffix="${suffix}" />
      </collision>
    </link>

    <gazebo_segbot_wheel_surface />

    <transmission type="pr2_mechanism_model/SimpleTransmission" name="${parent}_${suffix}_wheel_trans">
      <actuator name="${parent}_${suffix}_wheel_motor" />
      <joint name="${parent}_${suffix}_wheel_joint" />
      <mechanicalReduction>1.0</mechanicalReduction>
    </transmission>

  </macro>
</robot>

